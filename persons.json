    "paths": {
        "/persons": {
            "get": {
                "tags": [
                    "Person"
                ],
                "description": "Return list of persons",
                "operationId": "getPersons",
                "parameters": { "$ref": "./common.json#/common/collection" },
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/PersonsResponse"
                        }
                    },
                    "default": {
                        "description": "Error",
                        "schema": {
                            "$ref": "#/definitions/ErrorResponse"
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Person"
                ],
                "description": "Create persons",
                "operationId": "createPerson",
                "parameters": [
                    {
                        "name": "profile",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Person"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/PersonResponse"
                        }
                    },
                    "default": {
                        "description": "Error",
